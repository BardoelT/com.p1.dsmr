{
  "id": "dsmr-logger",
  "name": {
    "en": "DSMR logger"
  },
  "class": "other",
  "capabilities": [
    "measure_power.delivered",
    "meter_power.delivered",
    "measure_power.returned",
    "meter_power.returned",
    "meter_gas",
    "meter_water"
  ],
  "capabilitiesOptions": {
    "measure_power.delivered": {
      "title": {
        "en": "Power usage",
        "nl": "Elektriciteit verbruik"
      }
    },
    "measure_power.returned": {
      "title": {
        "en": "Power returned",
        "nl": "Elektriciteit teruglevering"
      }
    },
    "meter_power.delivered": {
      "title": {
        "en": "Total power delivered",
        "nl": "Elektriciteit verbruikt"
      }
    },
    "meter_power.returned": {
      "title": {
        "en": "Total power returned",
        "nl": "Elektriciteit teruggeleverd"
      }
    },
    "meter_gas": {
      "title": {
        "en": "Total gas delivered",
        "nl": "Gas verbruikt"
      }
    },
    "meter_water": {
      "title": {
        "en": "Total water delivered",
        "nl": "Water verbruikt"
      }
    }
  },
  "energy": {
    "approximation": {
      "usageConstant": 5
    },
    "cumulative": true
  },
  "images": {
    "large": "/drivers/dsmr-logger/assets/images/large.png",
    "small": "/drivers/dsmr-logger/assets/images/small.png"
  },
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Settings",
        "nl": "Instellingen"
      },
      "children": [
        {
          "id": "interval",
          "type": "number",
          "label": {
            "en": "Interval",
            "nl": "Interval"
          },
          "value": 5,
          "min": 1,
          "max": 60,
          "units": {
            "en": "seconds",
            "nl": "seconden"
          }
        },
        {
          "id": "hostname",
          "type": "text",
          "label": {
            "en": "Hostname or IP-address",
            "nl": "Hostnaam of IP-adres"
          },
          "value": "DSMR-api.local"
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Information",
        "nl": "Informatie"
      },
      "children": [
        {
          "id": "fwversion",
          "type": "label",
          "label": {
            "en": "Firmware version",
            "nl": "Firmware versie"
          }
        },
        {
          "id": "boardtype",
          "type": "label",
          "label": {
            "en": "Board type",
            "nl": "Bord type"
          }
        },
        {
          "id": "uptime",
          "type": "label",
          "label": {
            "en": "Uptime",
            "nl": "Uptime"
          }
        },
        {
          "id": "freeheap",
          "type": "label",
          "label": {
            "en": "Free heap",
            "nl": "Vrije heap ruimte"
          }
        }
      ]
    }
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_my_devices"
      }
    },
    {
      "id": "add_my_devices",
      "template": "add_devices"
    }
  ]
}